{
  "compilerOptions": {
    "target": "ES2020",                      // Compatible with modern Node.js
    "module": "CommonJS",                    // For Node.js
    "moduleResolution": "node",
    "rootDir": "src",                        // Your source folder
    "outDir": "dist",                        // Compiled JS output
    "esModuleInterop": true,                 // Allow import/export compatibility
    "forceConsistentCasingInFileNames": true,
    "strict": true,                          // Enable all strict type-checking options
    "skipLibCheck": true,
    "sourceMap": true                        // Enable if you want to debug TS source
  },
  "include": ["src"],                        // Include your source files
  "exclude": ["node_modules", "dist"]        // Exclude unnecessary folders
}
